PORT=3000
NODE_ENV=development

# Database Configuration
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=           # set to your MySQL password
MYSQL_DATABASE=eshopplus_hyperlocal
MYSQL_CONN_LIMIT=10

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# File Upload
UPLOADS_DIR=./uploads
MAX_FILE_SIZE=5242880    # 5MB in bytes

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# AWS S3 / Firebase Storage (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=advtez-uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# SMS Gateway (Optional)
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=ADVTEZ

# Application Settings
APP_NAME=Advtez Platform
APP_URL=http://localhost:3000

# Commission Settings
DEFAULT_COMMISSION_PERCENTAGE=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60
AUTH_RATE_LIMIT_MAX=5
